= form_for @question, html: {class: "ui form"} do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :acceptable_answers
    = f.text_field :acceptable_answers
  .actions
    = f.submit 'Save', class: "ui primary button"
